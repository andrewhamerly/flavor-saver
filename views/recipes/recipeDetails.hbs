<class="container mx-auto mt-8">
    <h1 class="text-4xl font-bold mb-4">{{recipe.title}}</h1>
    <img src="{{recipe.imageUrl}}" alt="{{recipe.title}}" class="w-full h-auto mb-4">
    <p class="text-gray-700 mb-4">{{recipe.description}}</p>
    <h2 class="text-2xl font-bold mb-2">Ingredients</h2>
    <ul class="list-disc list-inside mb-4">
        {{#each recipe.ingredients}}
        <li>{{this.name}} - {{this.quantity}} {{this.unit}}</li>
        {{/each}}
    </ul>
    <h2 class="text-2xl font-bold mb-2">Instructions hi</h2>
    <p class="text-gray-700 mb-4">{{recipe.instructions}}</p>
    <h2 class="text-2xl font-bold mb-2">Allergens</h2>
    <p class="text-gray-700 mb-4">{{recipe.allergens}}</p>
    <button id="favorite-btn" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded">Add to Favorites</button>
    </br>
</div>
