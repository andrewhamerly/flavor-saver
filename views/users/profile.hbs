<main class="container mx-auto px-4 py-6">
    <!-- User Information Section -->
    <section class="bg-white shadow rounded-lg p-6 mb-6">
      <div class="flex items-center space-x-4">
        <!-- TO DO: May Have To Push Back Profile Picture Feature -->
        <img src="{{user.profileImageUrl}}" alt="{{user.username}}'s profile picture" class="w-16 h-16 rounded-full">
        <div>
          <h2 class="text-xl font-semibold text-gray-900">{{user.username}}</h2>
          <p class="text-gray-600">{{user.bio}}</p>
        </div>
      </div>
    </section>

    <!-- User Recipe List Section -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 mb-4">Recipes</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each user.recipes}}
          <div class="bg-white shadow rounded-lg p-4">
            <img src="{{this.imageUrl}}" alt="{{this.title}}" class="w-full h-40 object-cover rounded-t-lg">
            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-900">{{this.title}}</h3>
              <p class="text-gray-600">{{this.description}}</p>
            </div>
          </div>
        {{/each}}
      </div>
    </section>

